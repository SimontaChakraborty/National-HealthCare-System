@page
@model National_Healthcare_System.Pages.Consultations.IndexModel
@using National_Healthcare_System.Utility
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if(!User.IsInRole(Static_Details.PatientUser))
{
<p>
    <a asp-page="Create">Create New</a>
</p>
}


<table class="table">

    <thead>
        <tr>
            <th>
                <!--@Html.DisplayNameFor(model => model.Consultation[0].Consultation_Id)-->
                Consultation ID
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Consultation[0].Doctor_Id)-->
                Doctor ID
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Consultation[0].Consultation_DateTime)-->
                Consultation Date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consultation[0].Comment)
            </th>
            <th></th>
        </tr>
    </thead>
    @if (Model.Consultation != null)
    {
        <tbody>

            @foreach (var item in Model.Consultation)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Consultation_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Consultation_DateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Consultation_Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Consultation_Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Consultation_Id">Delete</a>
                </td>
            </tr>
            }

        </tbody>
    }


</table>



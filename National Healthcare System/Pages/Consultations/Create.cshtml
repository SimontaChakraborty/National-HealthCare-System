@page
@model National_Healthcare_System.Pages.Consultations.CreateModel
@using National_Healthcare_System.Models

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Consultation</h4>
<hr />




<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Consultation.Consultation_Id" class="control-label">Consultation ID</label>
                <input asp-for="Consultation.Consultation_Id"   class="form-control" />
                <span asp-validation-for="Consultation.Consultation_Id" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Consultation.Doctor_Id" class="control-label">Doctor ID</label>
                <input asp-for="Consultation.Doctor_Id" class="form-control"  />
                <span asp-validation-for="Consultation.Doctor_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consultation.Identity_Number" class="control-label">Patient's Identity No.</label>
                <input asp-for="Consultation.Identity_Number" class="form-control" />
                <span asp-validation-for="Consultation.Identity_Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consultation.Consultation_DateTime" class="control-label"></label>
                <input asp-for="Consultation.Consultation_DateTime" class="form-control" />
                <span asp-validation-for="Consultation.Consultation_DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consultation.Comment" class="control-label"></label>
                <textarea rows="4" cols="50" asp-for="Consultation.Comment" class="form-control">Write Consultation Details...</textarea>
                <span asp-validation-for="Consultation.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

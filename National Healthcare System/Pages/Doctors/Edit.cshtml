@page
@model National_Healthcare_System.Pages.Doctors.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Doctor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Doctor.Doctor_Id" />
            <div class="form-group">
                <label asp-for="Doctor.Identity_Number" class="control-label"></label>
                <input asp-for="Doctor.Identity_Number" class="form-control" />
                <span asp-validation-for="Doctor.Identity_Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.Registration_Number" class="control-label"></label>
                <input asp-for="Doctor.Registration_Number" class="form-control" />
                <span asp-validation-for="Doctor.Registration_Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.Institution_Name" class="control-label"></label>
                <input asp-for="Doctor.Institution_Name" class="form-control" />
                <span asp-validation-for="Doctor.Institution_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.Doctor_Type" class="control-label"></label>
                <input asp-for="Doctor.Doctor_Type" class="form-control" />
                <span asp-validation-for="Doctor.Doctor_Type" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Doctor.Specialist" /> @Html.DisplayNameFor(model => model.Doctor.Specialist)
                </label>
            </div>
            @*<div class="form-group">
                <label asp-for="Doctor.Consultation_Times" class="control-label"></label>
                <input asp-for="Doctor.Consultation_Times" class="form-control" />
                <span asp-validation-for="Doctor.Consultation_Times" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Doctor.Consultation_Address" class="control-label"></label>
                <input asp-for="Doctor.Consultation_Address" class="form-control" />
                <span asp-validation-for="Doctor.Consultation_Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.Consultation_Contact" class="control-label"></label>
                <input asp-for="Doctor.Consultation_Contact" class="form-control" />
                <span asp-validation-for="Doctor.Consultation_Contact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.Organization_Id" class="control-label"></label>
                <input asp-for="Doctor.Organization_Id" class="form-control" />
                <span asp-validation-for="Doctor.Organization_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.Descriptions" class="control-label"></label>
                <input asp-for="Doctor.Descriptions" class="form-control" />
                <span asp-validation-for="Doctor.Descriptions" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Doctor.Verified" /> @Html.DisplayNameFor(model => model.Doctor.Verified)
                </label>
            </div>
            <div class="row">
                <div class="form-group col-2">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div class="col-6">
                    <a class="btn btn-danger" asp-page="/Views/Doctors Profile/Index">Cancel</a>
                </div>
            </div>
            
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model National_Healthcare_System.Pages.Medications.AddMedicationModel

<br />
<h2 class="text-primary">Add Medication Data</h2>
<br />

<div class="border container" style="padding: 30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Medication.Medication_Id"></label>
            </div>
            <div class="col-6">
                <input asp-for="Medication.Medication_Id" class="form-control disabled" />
            </div>
            <span asp-validation-for="Medication.Medication_Id"></span>
        </div>
        <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Medication.Prescription_Id"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Medication.Prescription_Id" class="form-control disabled" />
                </div>
                <span asp-validation-for="Medication.Prescription_Id"></span>
            </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Medication.DateOfMedication"></label>
            </div>
            <div class="col-6">
                <input asp-for="Medication.DateOfMedication" class="form-control disabled" />
            </div>
            <span asp-validation-for="Medication.DateOfMedication"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Medication.Medications"></label>
            </div>
            <div class="col-6">
                <input asp-for="Medication.Medications" class="form-control" />
            </div>
            <span asp-validation-for="Medication.Medications"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Create" class="btn btn-outline-primary text-center form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-outline-secondary text-center form-control ">Cancel</a>
            </div>
        </div>
    </form>
</div>

@page
@model National_Healthcare_System.Pages.Medications.IndexModel

@using National_Healthcare_System.Utility
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (!User.IsInRole(Static_Details.PatientUser))
{
    <p>
        <a asp-page="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                <!--@Html.DisplayNameFor(model => model.Medication[0].Prescription_Id)-->
                Prescription ID
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Medication[0].DateOfMedication)-->
                Date of Medication
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medication[0].Medications)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Medication)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Prescription_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfMedication)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Medications)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Medication_Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Medication_Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Medication_Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
